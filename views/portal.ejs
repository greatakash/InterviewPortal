<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Theme Made By www.w3schools.com - No Copyright -->
    <title>Bootstrap Theme Simply Me</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link rel="stylesheet" href="./css/custom.css"> 
</head>
<body>

    <!-- Header -->
    <nav class="navbar navbar-default bg-1">
    <div class="container">
        <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>                        
        </button>
        <a class="navbar-brand" href="#">Me</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Scapic</a></li>
        </ul>
        </div>
    </div>
    </nav>

    <!-- Container -->
    <div class="container-fluid text-center">
        <form method="POST" action="/portal_submit/<%= token %>">
        <table class="table table-hover">
            <tbody>
				<% var count = 1 %>
				<% questionsdata.forEach(function(item){ %>
                <tr>
                    <td><%= count %>. <%= item.question %></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td><input type="radio" name="<%= item.qid %>" value="option1"><%= item.option1 %></td>
                    <td><input type="radio" name="<%= item.qid %>" value="option2"><%= item.option2 %></td>
                    <td><input type="radio" name="<%= item.qid %>" value="option3"><%= item.option3 %></td>
                    <td><input type="radio" name="<%= item.qid %>" value="option4"><%= item.option4 %></td>
                </tr>
				<% count++; %>
			<% }); %>
            </tbody>
        </table>
        <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>

    <!-- Footer -->
	<br><br>
    <footer class="bg-1 text-center">
        <p>&copy; Scapic</p> 
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</body>
</html>
